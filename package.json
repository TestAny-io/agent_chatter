{
  "name": "agent-chatter-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/core",
    "packages/cli"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build -w packages/core",
    "build:cli": "npm run build -w packages/cli",
    "test": "npm run test --workspaces --if-present",
    "test:core": "npm run test -w packages/core",
    "test:cli": "npm run test -w packages/cli",
    "clean": "rm -rf packages/*/out packages/*/node_modules",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
